<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackGround">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/profile_toolbar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginRight="?android:attr/actionBarSize"
            android:textSize="16sp" />
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/profile_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:indeterminateDrawable="@drawable/progressbar"/>

    <LinearLayout
        android:id="@+id/profile_ll_show_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_toolbar"
        android:background="@color/primaryBackGroundLight">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/profile_username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
            android:fontFamily="serif" />

        <TextView
            android:id="@+id/profile_email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/profile_edit_click"
            android:layout_width="90dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:background="@color/primaryBackGround"
            android:padding="10dp"
            android:text="Edit"
            android:fontFamily="serif"
            android:textColor="@color/primaryOrange"
            android:textStyle="bold"/>

    </LinearLayout>

