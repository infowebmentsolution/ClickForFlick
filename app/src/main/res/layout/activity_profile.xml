    <LinearLayout
        android:id="@+id/profile_edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_ll_show_profile">
        <com.google.android.material.textfield.TextInputLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="@color/primaryborder"
            app:boxStrokeColor="@color/primaryborder"
            app:hintTextColor="@color/primaryborder"
            android:theme="@style/myTextInputLabel">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/primaryBackGround"
                android:maxLength="30"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="@color/primaryborder"
            app:boxStrokeColor="@color/primaryborder"
            app:hintTextColor="@color/primaryborder"
            android:theme="@style/myTextInputLabel">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:singleLine="true"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@color/primaryBackGround"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/primaryborder"
            app:boxStrokeColor="@color/primaryborder"
            app:hintTextColor="@color/primaryborder"
            android:theme="@style/myTextInputLabel">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" abc@gmail.com"
                android:textSize="16sp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:background="@color/primaryBackGround"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:padding="10dp"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:hint="Mobile No."
                android:textColorHint="@color/primaryborder"
                app:boxStrokeColor="@color/primaryborder"
                app:hintTextColor="@color/primaryborder"
                android:theme="@style/myTextInputLabel">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_mobile_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9806292002"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:background="@color/primaryBackGround"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:padding="10dp"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColorHint="@color/primaryborder"
                app:boxStrokeColor="@color/primaryborder"
                app:hintTextColor="@color/primaryborder"
                android:theme="@style/myTextInputLabel">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/profile_city_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:singleLine="true"
                    android:maxLength="17"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:background="@color/primaryBackGround"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
