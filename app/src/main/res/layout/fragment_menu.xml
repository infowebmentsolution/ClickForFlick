<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackGround"
    android:id="@+id/frag_menu">
    <ProgressBar
        android:id="@+id/frag_menu_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progressbar"/>
    <ScrollView
        android:id="@+id/frag_menu_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryBackGround"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/frag_menu_profile_ll"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@color/primaryBackGroundLight">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/ic_baseline_account_circle_24"/>
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:foregroundGravity="left"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/frag_menu_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guest"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/frag_menu_login_or_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login or Register"
                            android:textColor="@color/white"
                            android:textSize="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="fill_vertical"
                        android:foregroundGravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:foregroundGravity="right"
                            android:src="@drawable/ic_baseline_navigate_next_24" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/frag_menu_buyplan"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy Plan"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/frag_menu_mysubscription"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Subscription"
                android:textColor="@color/white"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/frag_menu_mytrasaction"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Transaction"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#827E7E"/>
            <TextView
                android:id="@+id/frag_menu_abouus"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#827E7E"/>
            <TextView
                android:id="@+id/frag_menu_logout"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <View
                android:id="@+id/frag_menu_view_logout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#827E7E"/>
            <TextView
                android:id="@+id/frag_menu_privacy_policy"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#827E7E"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>