<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClickForFlick"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryborder</item>
        <item name="colorPrimaryVariant">@color/primaryBackGround</item>
        <item name="colorOnPrimary">@color/primaryborder</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/primaryOrange</item>
        <item name="colorOnSecondary">@color/primaryborder</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/primaryborder</item>
    </style>
</resources>